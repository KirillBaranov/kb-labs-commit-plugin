{
  "name": "@kb-labs/commit-cli",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "CLI commands and manifest for KB Labs Commit plugin - AI-powered commit generation.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin-manifest": {
      "import": "./dist/manifest.js",
      "types": "./dist/manifest.d.ts"
    },
    "./cli": "./dist/cli/index.js",
    "./lifecycle": "./dist/lifecycle/index.js",
    "./dist/*": "./dist/*"
  },
  "kb": {
    "manifest": "./dist/manifest.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "pretype-check": "pnpm --filter @kb-labs/commit-cli build",
    "clean": "rimraf dist",
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@kb-labs/commit-contracts": "workspace:*",
    "@kb-labs/commit-core": "workspace:*",
    "@kb-labs/sdk": "link:../../../kb-labs-sdk/packages/sdk",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
